<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".RulesActivity">




    <ImageView
        android:id="@+id/rulesback"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/arrow"/>


    <TextView
        android:id="@+id/txt_rules"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rules To Play"
        android:layout_below="@id/rulesback"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/txt_rule1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. You Can Play Offline With Your Friend. Just Click On Play Offline Button"
        android:layout_below="@id/txt_rules"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        android:layout_margin="10dp"
        android:gravity="center_horizontal" />


    <TextView
        android:id="@+id/txt_rule2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_rule1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:text="2. To Play Online With Your Friend You Need To Click on Create Game Button. After That Tell The Game ID Shown There To Your Friend"
        android:textColor="@color/black"
        android:textSize="25dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_rule2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"


        android:text="3. Your Can Also Join Your Friend Game, Just Ask Them Their Game ID. After That Just Enter The Game ID And Click On Join Game Button"
        android:textColor="@color/black"
        android:textSize="25dp" />
















</RelativeLayout>