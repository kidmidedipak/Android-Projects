<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:weightSum="2">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:elevation="10dp"
            android:outlineAmbientShadowColor="@color/Grass_1"
            android:outlineSpotShadowColor="@color/Grass_1"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:id="@+id/ll_ipd_badge"
                style="@style/CounterCL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:backgroundTint="@color/ipd_theme"
                android:orientation="vertical">

                <TextView
                    style="@style/CounterTitle"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:text="Total Products"
                    android:textColor="@color/black" />

                <LinearLayout
                    style="@style/CounterLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp">

                    <TextView
                        android:id="@+id/tv_product_cnt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="000"
                        android:textColor="@color/ipd_theme"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_22"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:elevation="10dp"
            android:outlineAmbientShadowColor="@color/Grass_1"
            android:outlineSpotShadowColor="@color/Grass_1"
            app:cardCornerRadius="10dp"
            >

            <LinearLayout
                android:id="@+id/ll_ipd_badge1"
                style="@style/CounterCL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:backgroundTint="@color/casuality_theme"
                android:orientation="vertical">

                <TextView
                    style="@style/CounterTitle"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:text="Total Categories"
                    android:textColor="@color/black" />

                <LinearLayout
                    style="@style/CounterLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp">

                    <TextView
                        android:id="@+id/tv_category_cnt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="000"
                        android:textColor="@color/ipd_theme"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/ll_cardview"
        android:layout_marginTop="40dp"
        android:src="@drawable/graph"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />
</RelativeLayout>